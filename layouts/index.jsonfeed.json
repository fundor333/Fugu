{
	"version": "https://jsonfeed.org/version/1",
	"title": "{{ .Site.Title }}",
	 "home_page_url": "{{ .Permalink }}",
	 "feed_url": "{{ .Permalink }}feed.json",
	 "favicon": "{{ .Permalink }}favicon-192.png",
	 "author": {
	   "url": "{{ .Site.Author.twitterpage }}",
	   "name": "{{ .Site.Author.name }}",
	   "avatar": "{{ .Site.Author.avatar }}"
	 },
	 {{ $paginator := .Paginate ( where (where .Site.Pages ".Section" "post") "Kind" "page") }}

	 "items": [ {{ range $index, $element := $paginator.Pages }}{{ if $index }},{{end}}
	    {
	     "id": "{{ $element.Permalink }}",
	     "title": "{{ $element.Title }}",
	     "url": "{{ $element.Permalink }}",
	     "summary": {{ $element.Summary | jsonify }},
	     {{ if $element.Params.cover }}"image": "{{ $image := $element.Resources.GetMatch ( print $element.Params.cover ) }}",{{ end }}
	     "date_published": "{{ $element.Date.Format "2006-01-02T15:04:05Z07:00" }}",
	     "date_modified": "{{ $element.Lastmod.Format "2006-01-02T15:04:05Z07:00" }}"        
	   }
	   {{ end }}
	 ]
      }
